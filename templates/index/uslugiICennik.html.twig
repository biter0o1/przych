{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Strona główna{% endblock %}

{% block body %}

        <h1>Uslugi i Cennik</h1>

        <div style="width: 78vw">
        <table class="table table-hover table-bordered">
                <thead>
                <tr>
                        <th>Id</th>
                        <th>Nazwa</th>
                        <th>Opis</th>
                        <th>Koszt</th>
                </tr>
                </thead>
                <tbody>
                {% for uslugi in uslugis %}
                        <tr>
                                <td>{{ uslugi.id }}</td>
                                <td>{{ uslugi.nazwa }}</td>
                                <td>{{ uslugi.opis }}</td>
                                <td>{{ uslugi.koszt }}</td>
                        </tr>
                {% else %}
                        <tr>
                                <td colspan="5">Nie znaleziono</td>
                        </tr>
                {% endfor %}
                </tbody>
        </table>
        </div>
{% endblock %}
